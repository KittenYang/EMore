<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_article"
    android:background="@drawable/view_border"
    android:padding="@dimen/view_border_size">

    <com.caij.emore.widget.RatioRelativeLayout
        android:id="@+id/rl_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ratio="0.5">

        <ImageView
            android:id="@+id/iv_article"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/spacing_large"
            android:textColor="@color/text_87_inverse"
            android:layout_marginBottom="@dimen/spacing_medium_bt"/>

        <ImageView
            android:id="@+id/iv_article_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/spacing_medium"/>

    </com.caij.emore.widget.RatioRelativeLayout>

    <TextView
        android:id="@+id/tv_article_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/rl_image"
        android:padding="@dimen/spacing_medium_bt"
        android:textColor="@color/text_80"
        android:textSize="@dimen/text_size_medium"
        android:lineSpacingExtra="3dp"/>


</RelativeLayout>