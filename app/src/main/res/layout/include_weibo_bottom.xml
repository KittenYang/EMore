<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/spacing_weibo_item"
    android:paddingRight="@dimen/spacing_weibo_item"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingBottom="@dimen/spacing_medium">

        <TextView
            android:id="@+id/tv_like"
            style="@style/WeiboTextBody"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="1人赞了"
            android:textColor="@color/text_54"
            android:textSize="12sp"
            android:drawableLeft="@drawable/like_selector"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_comment_count"
            style="@style/WeiboTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/text_54"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/timeline_icon_comment"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:drawablePadding="4dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_repost_count"
            style="@style/WeiboTextBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/text_54"
            android:textSize="12sp"
            android:drawableLeft="@mipmap/timeline_icon_redirect"
            android:background="?attr/selectableItemBackground"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/tv_comment_count"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:drawablePadding="4dp"/>


</RelativeLayout>