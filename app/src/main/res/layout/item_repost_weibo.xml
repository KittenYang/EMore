<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_micro"
    android:layout_marginLeft="@dimen/spacing_medium"
    android:layout_marginRight="@dimen/spacing_medium"
    android:layout_marginTop="@dimen/spacing_micro"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="3dip"
    app:cardElevation="1.5dip">

    <com.caij.emore.widget.weibo.list.RepostWeiboListTextAndImageItemView
        android:id="@+id/weibo_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.caij.emore.widget.weibo.list.RepostWeiboListTextAndImageItemView>


</android.support.v7.widget.CardView>