<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_large">

       <include layout="@layout/include_weibo_item_head"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="@dimen/spacing_weibo_item"/>

        <com.caij.emore.view.FixClickableSpanBugTextView
            android:id="@+id/tv_content"
            style="@style/WeiboTextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_micro"
            android:paddingBottom="@dimen/spacing_micro"
            android:paddingTop="@dimen/spacing_micro"
            android:lineSpacingExtra="2dip"
            android:text="哈哈，我今天发了条微博"
            android:paddingLeft="@dimen/spacing_weibo_item"
            android:paddingRight="@dimen/spacing_weibo_item"/>

        <com.caij.emore.view.weibo.WeiboItemPicsView
            android:id="@+id/pics_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/spacing_weibo_item"
            android:paddingRight="@dimen/spacing_weibo_item"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_medium">

        </com.caij.emore.view.weibo.WeiboItemPicsView>

        <LinearLayout
            android:id="@+id/ll_re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/repost_content_bg_selector"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_medium"
            android:paddingLeft="@dimen/spacing_weibo_item"
            android:paddingRight="@dimen/spacing_weibo_item">

        <com.caij.emore.view.FixClickableSpanBugTextView
            android:id="@+id/tv_re_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dip"
            android:text="哈哈，我发了条微博被baby转发了，教主吃屎！"
            android:textColor="@color/text_54"
            android:textSize="@dimen/text_size_medium"/>

            <com.caij.emore.view.weibo.WeiboItemPicsView
                android:id="@+id/re_pics_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium">

            </com.caij.emore.view.weibo.WeiboItemPicsView>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/spacing_weibo_item"
            android:paddingRight="@dimen/spacing_weibo_item"
            android:paddingTop="@dimen/spacing_medium"
            android:paddingBottom="@dimen/spacing_medium">

            <TextView
                android:id="@+id/tv_like"
                style="@style/WeiboTextBody"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="1人赞了"
                android:textColor="@color/text_54"
                android:textSize="12sp"
                android:drawableLeft="@drawable/like_selector"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_comment_count"
                style="@style/WeiboTextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/text_54"
                android:textSize="12sp"
                android:drawableLeft="@mipmap/timeline_icon_comment"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_repost_count"
                style="@style/WeiboTextBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textColor="@color/text_54"
                android:textSize="12sp"
                android:drawableLeft="@mipmap/timeline_icon_redirect"
                android:background="?attr/selectableItemBackground"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/tv_comment_count"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:drawablePadding="4dp"/>

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_menus"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_gravity="right"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:paddingBottom="8dip"
        android:src="@mipmap/ic_menu_moreoverflow_card_dark_normal"/>

</merge>